<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yz.crm.service.mapper.system.MenuMapper">
    <resultMap id="resource" type="com.yz.crm.common.entity.user.Resources">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="path" property="path"></result>
        <result column="type" property="type"></result>
        <result column="parentId" property="parentId"></result>
        <result column="sequence" property="sequence"></result>
        <collection property="children" select="selectResourcesTree" column="id">

        </collection>
    </resultMap>

    <select id="selectResourcesTree" resultMap="resource">
        SELECT
          id,
          name,
          path,
          type,
          parentId,
          sequence
        FROM resources
        WHERE isDeleted = 0
        AND parentId = #{id}
        ORDER BY sequence
    </select>
</mapper>